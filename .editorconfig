# This EditorConfig sets the coding style for tapppi/nix-config
# The goal is to have similar style for the nix configs, lua nvim configs, etc.

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
max_line_length = 100

